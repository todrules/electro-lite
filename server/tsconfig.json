{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "compileOnSave": false,
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules/**",
    "../node_modules/**",
    "packages/*/node_modules/**",
    "**/*.d.ts"
  ]
}
